###
### Set The Runner For Linux Targets
###

# 64bit Linux
[target.x86_64-unknown-linux-gnu]
runner = "sh target/res/run_linux.sh"

# 32bit Linux
[target.i686-unknown-linux-gnu]
runner = "sh target/res/run_linux.sh"

